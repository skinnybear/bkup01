{
	"compilerOptions": {
		"watch": false,
		"sourceMap": false,
		"declaration": false,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"module": "commonjs",
		"outDir": "./out",
		"lib": [
			"es6",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"out"
	]
}